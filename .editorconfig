root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.java]
ij_continuation_indent_size = 4

# do not wrap long lines in XML files - IntelliJ wraps content of text nodes which changes semantics
[*.xml]
max_line_length = 9999

[*.properties]
charset = latin1 # latin1 = ISO-8859-1
